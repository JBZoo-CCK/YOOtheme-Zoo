<?xml version="1.0" encoding="utf-8"?>
<element type="gallery" group="Media">
	<name>Gallery</name>
	<author>YOOtheme</author>
	<creationDate>July 2011</creationDate>
	<copyright>Copyright (C) YOOtheme GmbH</copyright>
	<authorEmail>info@yootheme.com</authorEmail>
	<authorUrl>http://www.yootheme.com</authorUrl>
	<version>2.5.0</version>
	<description>Widgetkit Gallery</description>
	<params>
		<param name="directory" type="text" default="images" label="Source Directory" description="The gallery source directory inside the Joomla root directory" />
	</params>
	<params group="render">
		<param name="mode" type="list" default="lightbox" label="Mode" description="The gallery mode">
			<option value="lightbox">Lightbox</option>
			<option value="slideshow">Slideshow</option>
		</param>
		<param name="lightbox_group" type="radio" default="1" label="Lightbox Group" description="Enable Lightbox Group">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="lightbox_caption" type="radio" default="1" label="Lightbox Caption" description="Enable Lightbox Caption">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="slideshow_animated" type="list" default="top" label="Slideshow Effect" description="Slideshow Effect">
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
			<option value="left">Left</option>
			<option value="right">Right</option>
			<option value="fade">Fade</option>
			<option value="scrollLeft">ScrollLeft</option>
			<option value="scrollRight">ScrollRight</option>
			<option value="scroll">Scroll</option>
			<option value="sliceUp">SliceUp</option>
			<option value="sliceDown">SliceDown</option>
			<option value="sliceUpDown">SliceUpDown</option>
			<option value="fold">Fold</option>
			<option value="puzzle">Puzzle</option>
			<option value="boxes">Boxes</option>
			<option value="boxesRtl">BoxesRtl</option>
			<option value="randomSimple">RandomSimple</option>
			<option value="randomFx">RandomFx</option>
		</param>
		<param name="slideshow_width" type="text" default="auto" label="Slideshow Width" description="Slideshow Width in (px)" />
		<param name="slideshow_height" type="text" default="auto" label="Slideshow Height" description="Slideshow Height in (px)" />
        <param name="slideshow_autoplay" label="Autoplay" type="radio" default="1">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
        <param name="slideshow_interval" label="Autoplay interval (ms)" type="text" default="5000" />
		<param name="slideshow_duration" label="Effect Duration (ms)" type="text" default="500" />
		<param name="effect" type="list" default="" label="Thumbnail Effect" description="Thumbnail effect">
			<option value="">None</option>
			<option value="spotlight">Spotlight</option>
			<option value="zoom">Zoom</option>
			<option value="opacity">Opacity</option>
		</param>
		<param name="spotlight_effect" type="list" default="none" label="Spotlight Effect" description="Spotlight Effect">
			<option value="default">Default</option>
			<option value="top">Top</option>
			<option value="bottom">Bottom</option>
			<option value="left">Left</option>
			<option value="right">Right</option>
			<option value="fade">Fade</option>
		</param>
		<param name="spotlight_caption" type="radio" default="0" label="Spotlight Caption" description="Enable Spotlight Caption">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="corners" type="list" default="square" label="Thumbnail Corners" description="Thumbnail Corners">
			<option value="square">Square</option>
			<option value="round">Round</option>
		</param>
		<param name="margin" type="radio" default="1" label="Thumbnail Margin" description="Thumbnail Margin">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="order" type="list" default="asc" label="Thumbnail Ordering" description="The thumbnail ordering">
			<option value="asc">Ascending</option>
			<option value="desc">Descending</option>
			<option value="random">Random</option>
		</param>
		<param name="width" type="text" default="100" label="THUMBNAIL WIDTH PX" description="DEFAULT_THUMBNAIL_WIDTH" />
		<param name="height" type="text" default="0" label="THUMBNAIL HEIGHT PX" description="DEFAULT_THUMBNAIL_HEIGHT" />
		<param name="count" type="text" default="0" label="Thumbnail Count" description="LIMIT_THUMBNAILS_TO_SHOW" />
	</params>
</element>