	<params group="render">
		<param name="width" type="text" default="" label="RESIZE WIDTH PX" description="DYNAMICALLY_RESIZE_IMAGE_WIDTH" />
		<param name="height" type="text" default="" label="RESIZE HEIGHT PX" description="DYNAMICALLY_RESIZE_IMAGE_HEIGHT" />
